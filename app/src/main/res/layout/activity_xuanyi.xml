<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="悬疑："
            android:textSize="25dp"
            android:textColor="#2196F3"/>


        <ImageView
            android:id="@+id/xy_baiyexing"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/baiyexing"
            android:layout_centerHorizontal="true"

            />

        <ImageView
            android:id="@+id/xy_jieyou"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/jieyou"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/xy_baiyexing"
            />
        <ImageView
            android:id="@+id/xy_suming"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/suming"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/xy_jieyou"
            />
        <ImageView
            android:id="@+id/xy_xuwu"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/xuwu"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/xy_suming"
            />



    </RelativeLayout>
</ScrollView>